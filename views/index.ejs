<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Library Management System</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Library Management System</h1>
    <div class="text-center">
      <a href="/add" class="btn btn-primary mb-3">Add New Book</a>
    </div>
    <div class="list-group">
      <% books.forEach(book => { %>
        <div class="list-group-item">
          <h3 class="mb-1"><%= book.title %> by <%= book.author %></h3>
          <p class="mb-1">Genre: <%= book.genre %> | Year: <%= book.year %> | Available: <%= book.available ? 'Yes' : 'No' %></p>
          <div>
            <a href="/edit/<%= book._id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/delete/<%= book._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
